{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "VITE_DISABLE_AUTH": "true"
  },
  "rewrites": [
    { "source": "/game", "destination": "/game" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
